{
  "manifest_version": 3,
  "name": "JobPilot â€” Auto-Apply Bridge",
  "version": "1.0.0",
  "description": "Secure bridge for automated job applications with page parsing and guided file attachment",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://boards.greenhouse.io/*",
    "https://jobs.lever.co/*",
    "https://*.workdayjobs.com/*",
    "https://*.indeed.com/*",
    "https://www.linkedin.com/jobs/*"
  ],
  "background": {
    "service_worker": "background/service.js"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "public/icons/16.png",
      "32": "public/icons/32.png",
      "48": "public/icons/48.png",
      "128": "public/icons/128.png"
    }
  },
  "options_page": "ui/options.html",
  "content_scripts": [
    {
      "matches": ["https://boards.greenhouse.io/*"],
      "js": ["content/greenhouse.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://jobs.lever.co/*"],
      "js": ["content/lever.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://*.workdayjobs.com/*"],
      "js": ["content/workday.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://*.indeed.com/*"],
      "js": ["content/indeed.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content/linkedin.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "public/icons/16.png",
    "32": "public/icons/32.png",
    "48": "public/icons/48.png",
    "128": "public/icons/128.png"
  }
}
